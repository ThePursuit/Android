<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:keepScreenOn="true">

    <TextView
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/distanceView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Prey: 100m"
        android:background="#0ba5a5"
        android:gravity="center"/>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/map" tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_below="@+id/distanceView"
        android:layout_above="@+id/buttonLayout"/>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#0ba5a5"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/catchButton"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/catch_button"
            android:textAllCaps="false"
            android:layout_alignParentLeft="true"
            android:onClick="catchButton"/>

        <Button
            android:id="@+id/talkButton"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/talk_button"
            android:textAllCaps="false"
            android:layout_alignParentRight="true"
            android:onClick="talkButton"/>

    </LinearLayout>

</RelativeLayout>