<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".StartActivity"
    android:keepScreenOn="true">
    
 <ImageView
     android:id="@+id/icon"
     android:layout_height="300dp"
     android:layout_width="310dp"
     android:layout_marginTop="0dp"
     android:layout_centerHorizontal="true"
     android:src="@drawable/thepursuit"
     />

    <Button
        android:id="@+id/joinButton"
        android:background="@drawable/joinbutton"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:padding="10dp"
        android:textAllCaps="false"
        android:text="Join game"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:onClick="joinGame"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/createButton"
        android:background="@drawable/createbutton"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:text="Create game"
        android:textAllCaps="false"
        android:layout_centerVertical="true"
        android:onClick="createGame"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/joinButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/rulesButton"
        android:background="@drawable/rulesbutton"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:padding="10dp"
        android:textSize="16dp"
        android:textAlignment="center"
        android:text="Rules"
        android:textAllCaps="false"
        android:layout_centerVertical="true"
        android:onClick="createGame"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/createButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
